{
    "comments": {
        "lineComment": "--",
        "blockComment": ["--[[", "]]"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["--[[", " ]]"],
        ["do", "    end"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["s'", "'"]
    ],
    "surroundingPairs": [
        ["--[[", " ]]"],
        ["do", " end"],
        ["for", " out"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["s'", "'"]
    ],
    "onEnterRules": [
        {
            "beforeText": "(^|\\s)do(\\s|$)",
            "afterText": "^\\s*end\\b",
            "action": {
                "indent": "indent",
                "indentAction": 2
            }
        },
        {
            "beforeText": "(^|\\s)do(\\s|$)",
            "action": {
                "indent": "indent",
                "indentAction": 1
            }
        }
    ]
}
